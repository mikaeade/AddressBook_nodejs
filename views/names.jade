extends layout

block content
  h1(id="high") Addressbook Application
  div(class='container')
    h1 #{owner}'s AddressBook
    ul(data-role='listview', data-inset="true")
      each person in addressbookData
        li
          a(href="/contacts?id=#{person._id}") #{person.name}
    p
    div     
      a(href="/new_contact") Add a contact to Addressbook.
  script.
        $(".container").mouseover(function() {
            $(this).css('background-color', 'yellow');
            });
        $( ".container" ).mouseleave(function() {
            $(this).css('background-color', 'white');
            });      