extends layout

block content
  div(class="container")
    form(name="register_user", action="/register_user", method="post", data-ajax = "false")
      h2 Register
      label User Name: 
      input(type="text", name="username")
      label Password: 
      input(type="text", name="password")
      label Email: 
      input(type="text", name="email")
      input(type="submit", value="Register")
      h3 #{error}